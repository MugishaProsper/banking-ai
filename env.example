# AI Banking Microservice Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=banking_db
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=1

# Backend Service Configuration
BACKEND_URL=http://localhost:3000
BACKEND_TIMEOUT=30

# Service Configuration
SERVICE_NAME=ai-banking-microservice
SERVICE_VERSION=1.0.0
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
ENVIRONMENT=development

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Configuration
API_KEY_SECRET=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Store Configuration (Feast)
FEAST_REPO_PATH=./feature_repo
FEAST_PROVIDER=local
FEAST_REGISTRY=./feature_repo/registry.db
FEAST_PROJECT=fraud_ai
FEAST_ONLINE_HOST=localhost
FEAST_ONLINE_PORT=6379
FEATURE_STORE_TIMEOUT=10

# Kafka Configuration (for event streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=ai-banking-service
KAFKA_AUTO_OFFSET_RESET=earliest

# Model Configuration
MODEL_CACHE_TTL=3600
MODEL_FALLBACK_ENABLED=true
